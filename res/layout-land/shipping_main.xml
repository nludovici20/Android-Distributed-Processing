<RelativeLayout 
	android:id="@+id/linearLayout1" 
	android:background="@layout/custom_component1"
	android:layout_height="fill_parent" 
	xmlns:android="http://schemas.android.com/apk/res/android" 
	android:layout_width="match_parent">
   	  	
   	<!-- Info Panel -->
    <RelativeLayout 
	    android:layout_height="match_parent" 
	    android:background="@layout/custom_component1"
	    android:id="@+id/info_panel" 
	    android:layout_weight="10"
	    android:layout_width="match_parent">
	    <TextView 
	    	android:hint="Select Shipment Info Requested" 
	    	android:id="@+id/header_txt"
	    	android:layout_centerHorizontal="true"
	    	android:textSize="18sp"
	    	android:gravity="center_horizontal"
	    	android:layout_width="wrap_content" 
	    	android:layout_height="wrap_content">
    	</TextView>
    	 <TextView 
		    android:layout_width="wrap_content" 
		    android:layout_below="@+id/header_txt" 
		    android:layout_alignParentLeft="true"
		    android:text="Category 1:" 
		    android:id="@+id/textView1" 
		    android:layout_height="wrap_content">
	    </TextView>
	    <TextView 
		    android:layout_width="wrap_content" 
		    android:layout_toRightOf="@+id/textView1" 
		     android:layout_below="@+id/header_txt" 
		    android:text="stat" 
		    android:paddingLeft="8sp"
		    android:id="@+id/textView2" 
		    android:layout_height="wrap_content">
	    </TextView>   
	    <TextView 
		    android:layout_width="wrap_content" 
		    android:layout_below="@+id/textView2" 
		    android:layout_alignParentLeft="true"
		    android:text="Category 2:" 
		    android:id="@+id/textView3" 
		    android:layout_height="wrap_content">
	    </TextView>
	    <TextView 
		    android:layout_width="wrap_content" 
		    android:layout_toRightOf="@+id/textView3" 
		    android:layout_below="@+id/textView2" 
		    android:text="stat" 
		    android:paddingLeft="8sp"
		    android:id="@+id/textView4" 
		    android:layout_height="wrap_content">
	    </TextView>   
	    <TextView 
		    android:layout_width="wrap_content" 
		    android:layout_below="@+id/textView3" 
		    android:layout_alignParentLeft="true"
		    android:text="Category 3:" 
		    android:id="@+id/textView5" 
		    android:layout_height="wrap_content">
	    </TextView>
	    <TextView 
		    android:layout_width="wrap_content" 
		    android:layout_toRightOf="@+id/textView5" 
		     android:layout_below="@+id/textView4" 
		    android:text="stat" 
		    android:paddingLeft="8sp"
		    android:id="@+id/textView6" 
		    android:layout_height="wrap_content">
	    </TextView> 
	    <TextView 
		    android:layout_width="wrap_content" 
		    android:layout_below="@+id/textView5" 
		    android:layout_alignParentLeft="true"
		    android:text="Category 4:" 
		    android:id="@+id/textView7" 
		    android:layout_height="wrap_content">
	    </TextView>
	    <TextView 
		    android:layout_width="wrap_content" 
		    android:layout_toRightOf="@+id/textView7" 
		     android:layout_below="@+id/textView6" 
		    android:text="stat" 
		    android:paddingLeft="8sp"
		    android:id="@+id/textView8" 
		    android:layout_height="wrap_content">
	    </TextView>  
	    <TextView 
		    android:layout_width="wrap_content" 
		    android:layout_below="@+id/textView8" 
		    android:layout_alignParentLeft="true"
		    android:text="Category 5:" 
		    android:id="@+id/textView9" 
		    android:layout_height="wrap_content">
	    </TextView>
	    <TextView 
		    android:layout_width="wrap_content" 
		    android:layout_toRightOf="@+id/textView9" 
		     android:layout_below="@+id/textView8" 
		    android:text="stat" 
		    android:paddingLeft="8sp"
		    android:id="@+id/textView10" 
		    android:layout_height="wrap_content">
	    </TextView>        
    </RelativeLayout>     
   
    <SlidingDrawer 
	    android:id="@+id/slidingDrawer1" 
	    android:orientation="horizontal"
	    android:layout_width="match_parent"
	    android:layout_height="75px"
	    android:handle="@+id/handle" 
	    android:content="@+id/content">
        <Button 
	        android:layout_height="wrap_content" 
	        android:layout_width="wrap_content" 
	        android:textSize="12sp"
	        android:text="Navigation" 
	        android:id="@+id/handle">
        </Button>
       <HorizontalScrollView
	        android:layout_width="match_parent"
	        android:id="@+id/content" 
	        android:layout_height="wrap_content">
	        <RelativeLayout 
	        android:layout_width="wrap_content" 
	        android:scrollbarAlwaysDrawVerticalTrack="true"
	        android:layout_height="wrap_content">
    			<Button 
    				android:layout_height="wrap_content" 
    				android:id="@+id/vehicle_btn" 
    				android:layout_width="175px" 
    				android:text="Vehicles"> 
    			</Button>
	      		<Button 
    				android:layout_height="wrap_content" 
    				android:id="@+id/drivers_btn" 
    				android:layout_width="175px" 
    				android:text="Drivers" 
    				android:layout_toRightOf="@+id/vehicle_btn">
    			</Button>
    			<Button 
    				android:layout_height="wrap_content" 
    				android:id="@+id/shipments_btn" 
    				android:layout_width="175px" 
    				android:text="Shipments" 
    				android:layout_toRightOf="@+id/drivers_btn">
    			</Button>
    			<Button 
    				android:layout_height="wrap_content" 
    				android:id="@+id/routing_btn" 
    				android:layout_width="175px" 
    				android:text="Routing" 
    				android:layout_toRightOf="@+id/shipments_btn">
    			</Button>
    			<Button 
    				android:layout_height="wrap_content" 
    				android:id="@+id/contractors_btn" 
    				android:layout_width="175px" 
    				android:text="Contractors" 
    				android:layout_toRightOf="@+id/routing_btn">
    			</Button>
    			<Button 
    				android:layout_height="wrap_content" 
    				android:id="@+id/depots_btn" 
    				android:layout_width="175px" 
    				android:text="Depots" 
    				android:layout_toRightOf="@+id/contractors_btn">
    			</Button>
    			<Button 
    				android:layout_height="wrap_content" 
    				android:id="@+id/warehouses_btn" 
    				android:layout_width="175px" 
    				android:text="Warehouses" 
    				android:layout_toRightOf="@+id/depots_btn">
    			</Button>
    			<Button 
    				android:layout_height="wrap_content" 
    				android:id="@+id/vehicle_type_btn" 
    				android:layout_width="175px" 
    				android:text="Vehicle Type" 
    				android:layout_toRightOf="@+id/depots_btn">
    			</Button>
    			<Button 
    				android:layout_height="wrap_content" 
    				android:id="@+id/maintenance_btn" 
    				android:layout_width="175px" 
    				android:text="Maintenance" 
    				android:layout_toRightOf="@+id/vehicle_type_btn">
    			</Button>
    			<Button 
    				android:layout_height="wrap_content" 
    				android:id="@+id/technicians_btn" 
    				android:layout_width="175px" 
    				android:text="Technicians" 
    				android:layout_toRightOf="@+id/maintenance_btn">
    			</Button>
    			<Button 
    				android:layout_height="wrap_content" 
    				android:id="@+id/contacts_btn" 
    				android:layout_width="175px" 
    				android:text="Contacts" 
    				android:layout_toRightOf="@+id/technicians_btn">
    			</Button>
    			<Button 
    				android:layout_height="wrap_content" 
    				android:id="@+id/reports_btn" 
    				android:layout_width="175px" 
    				android:text="Reports" 
    				android:layout_toRightOf="@+id/contacts_btn">
    			</Button>
	        </RelativeLayout>
	        </HorizontalScrollView>
    </SlidingDrawer>
</RelativeLayout>
