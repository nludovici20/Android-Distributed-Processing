<RelativeLayout 
	android:id="@+id/linearLayout1" 
	android:background="@layout/custom_component1"
	android:layout_height="fill_parent" 
	xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent">
   	
   <!-- Panel -->
    <RelativeLayout 
	    android:layout_height="match_parent" 
	    android:background="@layout/custom_component1"
	    android:id="@+id/info_panel" 
	    android:layout_weight="10"
	    android:layout_width="match_parent">
	    <TextView 
		    android:layout_width="wrap_content" 
		    android:hint="Select Shipment Info Requested" 
		    android:gravity="center_horizontal"
		    android:id="@+id/header_txt" 
		    android:layout_centerHorizontal="true"
		    android:textSize="18sp"
		    android:layout_height="wrap_content">
	    </TextView>
	    <TextView 
		    android:layout_width="wrap_content" 
		    android:layout_below="@+id/header_txt" 
		    android:layout_alignParentLeft="true"
		    android:text="Category 1:" 
		    android:id="@+id/textView1" 
		    android:layout_height="wrap_content">
	    </TextView>
	    <TextView 
		    android:layout_width="wrap_content" 
		    android:layout_toRightOf="@+id/textView1" 
		    android:layout_below="@+id/header_txt"
		    android:paddingLeft="8sp"
		    android:text="stat" 
		    android:id="@+id/textView2" 
		    android:layout_height="wrap_content">
	    </TextView>   
	      <TextView 
		    android:layout_width="wrap_content" 
		    android:layout_below="@+id/textView2" 
		    android:layout_alignParentLeft="true"
		    android:text="Category 2:" 
		    android:id="@+id/textView3" 
		    android:layout_height="wrap_content">
	    </TextView>
	    <TextView 
		    android:layout_width="wrap_content" 
		    android:layout_toRightOf="@+id/textView3" 
		    android:layout_below="@+id/textView2" 
		    android:text="stat" 
		    android:paddingLeft="8sp"
		    android:id="@+id/textView4" 
		    android:layout_height="wrap_content">
	    </TextView>   
	    <TextView 
		    android:layout_width="wrap_content" 
		    android:layout_below="@+id/textView3" 
		    android:layout_alignParentLeft="true"
		    android:text="Category 3:" 
		    android:id="@+id/textView5" 
		    android:layout_height="wrap_content">
	    </TextView>
	    <TextView 
		    android:layout_width="wrap_content" 
		    android:layout_toRightOf="@+id/textView5" 
		     android:layout_below="@+id/textView4" 
		    android:text="stat" 
		    android:paddingLeft="8sp"
		    android:id="@+id/textView6" 
		    android:layout_height="wrap_content">
	    </TextView> 
	    <TextView 
		    android:layout_width="wrap_content" 
		    android:layout_below="@+id/textView5" 
		    android:layout_alignParentLeft="true"
		    android:text="Category 4:" 
		    android:id="@+id/textView7" 
		    android:layout_height="wrap_content">
	    </TextView>
	    <TextView 
		    android:layout_width="wrap_content" 
		    android:layout_toRightOf="@+id/textView7" 
		     android:layout_below="@+id/textView6" 
		    android:text="stat" 
		    android:paddingLeft="8sp"
		    android:id="@+id/textView8" 
		    android:layout_height="wrap_content">
	    </TextView>  
	    <TextView 
		    android:layout_width="wrap_content" 
		    android:layout_below="@+id/textView8" 
		    android:layout_alignParentLeft="true"
		    android:text="Category 5:" 
		    android:id="@+id/textView9" 
		    android:layout_height="wrap_content">
	    </TextView>
	    <TextView 
		    android:layout_width="wrap_content" 
		    android:layout_toRightOf="@+id/textView9" 
		     android:layout_below="@+id/textView8" 
		    android:text="stat" 
		    android:paddingLeft="8sp"
		    android:id="@+id/textView10" 
		    android:layout_height="wrap_content">
	    </TextView>          
	</RelativeLayout>
	
	
	<!-- Sliding Drawer Panel -->
    <SlidingDrawer 
	    android:id="@+id/slidingDrawer1" 
	    android:orientation="vertical"
	    android:layout_width="100px"
	    android:layout_height="fill_parent"
	    android:handle="@+id/handle" 
	    android:content="@+id/content">
	    <Button 
	        android:layout_height="wrap_content" 
	        android:layout_width="wrap_content" 
	        android:textSize="12sp"
	        android:text="Handle" 
	        android:id="@+id/handle">
        </Button>
        <LinearLayout 
	        android:id="@+id/content" 
	        android:orientation="vertical"
	        android:layout_width="match_parent" 
	        android:layout_height="0px">
	         <Button 
	        	android:layout_height="wrap_content" 
	        	android:id="@+id/truck_btn" 
	  			android:layout_weight="1"
	  			android:background="@layout/custom_component1"
	  			android:textColor="@color/green01"
	        	android:text="Trucks" 
	        	android:layout_width="match_parent">
	        </Button>
	        <Button 
		        android:layout_height="wrap_content" 
		        android:id="@+id/company_btn" 
		        android:layout_weight="1"
		        android:background="@layout/custom_component1"
		        android:textColor="@color/green01"
		        android:text="Company" 
		        android:layout_width="match_parent">
	        </Button>
	        <Button 
	        	android:layout_height="wrap_content" 
	        	android:id="@+id/button3" 
	        	android:layout_weight="1"
	        	android:background="@layout/custom_component1"
	        	android:textColor="@color/green01"
	        	android:text="Button" 
	        	android:layout_width="match_parent">
	        </Button>
	        <Button 
	        	android:layout_height="wrap_content" 
	        	android:id="@+id/button4" 
	        	android:layout_weight="1"
	        	android:background="@layout/custom_component1"
	        	android:textColor="@color/green01"
	        	android:text="Button" 
	        	android:layout_width="match_parent">
	        </Button>
	        <Button 
	        	android:layout_height="wrap_content" 
	        	android:id="@+id/button5" 
	        	android:layout_weight="1"
	        	android:background="@layout/custom_component1"
	        	android:textColor="@color/green01"
	        	android:text="Button" 
	        	android:layout_width="match_parent">
	        </Button>
	        </LinearLayout>
    </SlidingDrawer>
</RelativeLayout>
